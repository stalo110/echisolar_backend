{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "types": ["node"],
    "sourceMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "node_modules",
    "src/tests/**/*",
    "**/*.test.ts"
  ]
}
